<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["FuncionarioID"] != null)
    {
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Sistema de Estacionamento</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if ((bool)Session["Administrador"])
                    {
                        <li class="nav-item"><a class="nav-link" href="/Veiculo/">Veículos</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Funcionario/">Funcionários</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Servico/">Serviços</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Vaga/">Vagas</a></li>
                    }
                    <li class="nav-item"><a class="nav-link" href="/Comanda/">Comandas</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cliente/">Clientes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Login/Logout">Sair</a></li>
                </ul>
            </div>
        </nav>
    }
    <div id="modal-area"></div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="@Url.Content("~/Scripts/inputmask/min/jquery.inputmask.bundle.min.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Scripts/AjaxMixin.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>